<div class="fondo">
  <div class="row">
    <div class="col-6 d-flex align-items-center justify-content-center">
      <div style="width: 60%;">

          <h1 class="titulo">Log in</h1>
          <p class="subtitulo">Welcome Back! Pleace enter your details.</p>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
            <div class="field ">
              <%= f.input :email, autofocus: true, autocomplete: "email", class:"w-100 " %>
            </div>

            <div class="field ">
              <%= f.input :password, autocomplete: "current-password", class:"w-100 " %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class:"" %>
              </div>
            <% end %>

            <div class="actions">
              <%# <%= f.button :submit, class:"w-100 boton mt-4 subtitulo" %>
                <%= button_tag(type: 'submit', class: "boton mt-4 subtitulo", style: "border: 0;border-radius: 6px;padding: 7px;width: 84%;") do %>
                   Sign In
                <% end %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

      </div>

    </div>
    <div class="col-6 p-0">
      <div class="login-photo">
        <%= image_tag("https://res.cloudinary.com/ddlmgs04n/image/upload/v1659113274/Zinma2.0/Zinma_full_color_ymgqie.png", class:"logo") %>
        <%= render "shared/flashes" %>
      </div>
    </div>
  </div>
</div>
