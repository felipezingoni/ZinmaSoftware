<div class="row">
    <div class="col-3 pr-0">
      <%= render 'shared/sidebar' %>
    </div>
    <div class="col-9 pl-0">
      <div class="dashboard-edit" style="height:90vh; width: auto; border-top-right-radius: 32px;">
          <div class="text-center" style="margin-bottom: 50px;">
            <h1 class="titulo pt-5">Crea un nuevo Archivo</h1>
            <div class="d-flex justify-content-center align-items-center">
              <i class="fa-solid fa-triangle-exclamation m-1" style="color: #747958fa;"></i>
              <p class="subtitulo m-1">Solo podran crear los usuarios habilitados</p>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <%# <%= simple_form_for document_path do |f|%>
            <%= simple_form_for @document do |f| %>
              <div class="field m-2">
                <%= f.input :name_document %>
              </div>
              <div class="field m-2">
                <%= f.input :created_by %>
              </div>
              <div class="field m-2">
                <%= f.input :date %>
              </div>
              <div class="field m-2">
                <%= f.file_field :image %>
              </div>
              <div class="actions m-2 text-center">
                <%= button_tag(type: 'submit', class: "boton mt-4 subtitulo", style: "border: 0;border-radius: 6px;padding: 7px;width: 84%;") do %>
                   Create Document
                <% end %>
              </div>
            <% end %>
          </div>
          <%= render "shared/flashes" %>
      </div>
    </div>
</div>
